{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@routes/*"     : ["./src/routes/*"],
      "@middleware/*" : ["./src/middleware/*"],
      "@schemas/*"    : ["./src/schemas/*"],
      "@utils/*"      : ["./src/utils/*"],
      "@services/*"   : ["./src/services/*"],
      "@dtos/*"       : ["./src/dtos/*"],
      "@/*"           : ["./src/*"]
    }
  }
}
